{
    "name": "vite-image",
    "version": "1.0.2",
    "description": "A vitejs plugin to streamline image processing.",
    "files": [
        "dist"
    ],
    "type": "module",
    "types": "./dist/index.d.ts",
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "require": "./dist/index.cjs",
            "import": "./dist/index.js"
        }
    },
    "scripts": {
        "test": "node --experimental-loader @esbuild-kit/esm-loader node_modules/uvu/bin.js",
        "coverage": "c8 npm run test",
        "build": "tsup --dts --clean",
        "build:code": "tsup",
        "build:types": "tsup --dts-only",
        "lint": "eslint . --report-unused-disable-directives --cache",
        "release": "npm run build && changeset publish"
    },
    "keywords": [
        "vite",
        "image",
        "imagetools",
        "typescript",
        "uvu"
    ],
    "author": "Jack Weilage <jack@weilage.dev> (https://weilage.dev/)",
    "license": "ISC",
    "repository": "github:jack-weilage/vite-image",
    "bugs": "https://github.com/jack-weilage/vite-image/issues",
    "packageManager": "pnpm@7.25.1",
    "engines": {
        "pnpm": "^7.0.0",
        "node": ">=16.x"
    },
    "devDependencies": {
        "@changesets/cli": "^2.26.0",
        "@esbuild-kit/esm-loader": "^2.5.4",
        "@types/node": "^18.11.18",
        "@types/sharp": "^0.31.1",
        "@typescript-eslint/eslint-plugin": "^5.48.0",
        "@typescript-eslint/parser": "^5.48.0",
        "c8": "^7.12.0",
        "concurrently": "^7.6.0",
        "eslint": "^8.31.0",
        "lint-staged": "^13.1.0",
        "simple-git-hooks": "^2.8.1",
        "tsup": "^6.5.0",
        "typescript": "^4.9.4",
        "uvu": "^0.5.6",
        "vite": "^4.0.4"
    },
    "dependencies": {
        "magic-string": "^0.27.0",
        "sharp": "^0.31.3",
        "validate": "^5.2.0"
    },
    "peerDependencies": {
        "vite": "^4.0.0"
    },
    "simple-git-hooks": {
        "pre-commit": "npx lint-staged -v"
    },
    "tsup": {
        "entry": [
            "src/index.ts"
        ],
        "format": [
            "cjs",
            "esm"
        ],
        "minify": true
    },
    "c8": {
        "check-coverage": true,
        "reporter": [
            "text",
            "html"
        ],
        "functions": 98,
        "branches": 98,
        "skip-full": true,
        "exclude": [
            "dist",
            "**/*.test.ts",
            "tests/utils.ts"
        ]
    }
}