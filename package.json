{
    "name": "vite-image",
    "version": "0.0.1",
    "description": "A vitejs plugin to streamline image processing.",
    "module": "dist/index.mjs",
    "main": "dist/index",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs"
        }
    },
    "scripts": {
        "test": "vitest run .",
        "build": "rimraf dist && rollup -c rollup.config.ts --configPlugin rollup-plugin-esbuild"
    },
    "keywords": [
        "vite", "image", "imagetools", "typescript", "vitest"
    ],
    "author": "Jack Weilage",
    "license": "ISC",
    "devDependencies": {
        "@types/node": "^18.11.9",
        "@types/sharp": "^0.31.0",
        "esbuild": "^0.15.12",
        "happy-dom": "^7.6.6",
        "rimraf": "^3.0.2",
        "rollup": "^3.2.5",
        "rollup-plugin-esbuild": "^4.10.1",
        "tslib": "^2.4.1",
        "typescript": "^4.8.4",
        "vite": "^3.2.2",
        "vitest": "^0.24.5"
    },
    "dependencies": {
        "@rollup/pluginutils": "^5.0.2",
        "magic-string": "^0.26.7",
        "sharp": "^0.31.1"
    }
}