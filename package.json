{
    "name": "vite-image",
    "version": "0.3.0",
    "description": "A vitejs plugin to streamline image processing.",
    "module": "dist/index.mjs",
    "main": "dist/index",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs"
        }
    },
    "scripts": {
        "test": "vitest --run --no-threads",
        "build:types": "dts-bundle-generator src/index.ts --no-banner --no-check -o dist/index.d.ts",
        "build:code": "rollup -c rollup.config.ts --configPlugin rollup-plugin-esbuild",
        "build": "rimraf dist && (pnpm build:code & pnpm build:types)",
        "release": "pnpm build && pnpm changeset publish"
    },
    "keywords": [
        "vite",
        "image",
        "imagetools",
        "typescript",
        "vitest"
    ],
    "author": "Jack Weilage",
    "license": "ISC",
    "devDependencies": {
        "@changesets/cli": "^2.25.2",
        "@types/node": "^18.11.9",
        "@types/sharp": "^0.31.0",
        "dts-bundle-generator": "^7.0.0",
        "esbuild": "^0.15.13",
        "happy-dom": "^7.6.6",
        "rimraf": "^3.0.2",
        "rollup": "^3.2.5",
        "rollup-plugin-esbuild": "^4.10.2",
        "tslib": "^2.4.1",
        "typescript": "^4.8.4",
        "vite": "^3.2.3",
        "vitest": "^0.25.1"
    },
    "dependencies": {
        "@rollup/pluginutils": "^5.0.2",
        "magic-string": "^0.26.7",
        "sharp": "^0.31.2"
    }
}