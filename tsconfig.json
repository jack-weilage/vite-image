{
    "exclude": [ "node_modules" ],
    "compilerOptions": {
        "allowJs": true,
        "target": "es2022",
        "noErrorTruncation": true,
        "skipLibCheck": true,
        "importsNotUsedAsValues": "error",
        "noEmit": true,
        // rollup takes care of these
        "module": "esnext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "alwaysStrict": true
    }
}