{
    "exclude": [ "node_modules" ],
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "noErrorTruncation": true,
        "skipLibCheck": true,
        "verbatimModuleSyntax": true,
        "noEmit": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "alwaysStrict": true
    }
}